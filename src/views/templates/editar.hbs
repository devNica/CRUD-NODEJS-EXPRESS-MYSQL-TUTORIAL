<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            EDITAR DATOS DE LA PERSONA
        </div>
        <div class="card-body">
            {{#each persona}}
                <form action="/personas/editar/{{this.idpersona}}" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" class="form-control" name="nombre" id="nombre" value="{{this.nombre}}">
                    </div> 
                    <div class="form-group">
                        <label for="apellido">Apellido:</label>
                        <input type="text" class="form-control" name="apellido" id="apellido" value="{{this.apellido}}">
                    </div>  
                    <div class="form-group">
                        <label for="profesion">Profesion:</label>
                        <input type="text" class="form-control" name="profesion" id="profesion" value="{{this.profesion}}">
                    </div>
                    <div class="form-group">
                        <label for="apellido">Edad:</label>
                        <input type="number" class="form-control" name="edad" id="edad" value="{{this.edad}}">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">Guardar</button>
                    </div>        
                </form>
            {{/each}}
        </div>
    </div>
</div>